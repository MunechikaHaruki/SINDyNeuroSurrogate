# --- Figure ---
figure.figsize: 3.5, 2.625
savefig.format: pdf

# --- Font (Serif) ---
font.family: serif
font.serif: Times New Roman
font.size: 8
axes.titlesize: 10
axes.labelsize: 9
xtick.labelsize: 8
ytick.labelsize: 8

# --- Lines & Markers ---
lines.linewidth: 1.0
lines.markersize: 4

# --- Axes & Ticks ---
axes.linewidth: 0.8
xtick.major.width: 0.6
ytick.major.width: 0.6
xtick.direction: in
ytick.direction: in

# --- Legend ---
legend.fontsize: 7
legend.frameon: False